-- ===== Services =====
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local player = Players.LocalPlayer

-- ===== UI =====
local screenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
screenGui.Name = "AutoLaserUI"
screenGui.ResetOnSpawn = false

local mainFrame = Instance.new("Frame", screenGui)
mainFrame.Size = UDim2.new(0, 200, 0, 260)
mainFrame.Position = UDim2.new(1, -280, 0, 60)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
mainFrame.BorderSizePixel = 0
mainFrame.Active = true
mainFrame.ClipsDescendants = true

-- ‡∏°‡∏∏‡∏°‡πÇ‡∏Ñ‡πâ‡∏á‡∏°‡∏ô
local corner = Instance.new("UICorner", mainFrame)
corner.CornerRadius = UDim.new(0, 12)

-- ‡πÄ‡∏™‡πâ‡∏ô‡∏Ç‡∏≠‡∏ö‡∏™‡∏≤‡∏¢‡∏£‡∏∏‡πâ‡∏á
local stroke = Instance.new("UIStroke", mainFrame)
stroke.Thickness = 3
stroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
stroke.Color = Color3.fromRGB(255, 0, 0)

-- ===== ‡∏õ‡∏∏‡πà‡∏° Auto Laser =====
local autoLaserBtn = Instance.new("TextButton", mainFrame)
autoLaserBtn.Size = UDim2.new(1, -20, 0, 40)
autoLaserBtn.Position = UDim2.new(0, 10, 0, 10)
autoLaserBtn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
autoLaserBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
autoLaserBtn.Font = Enum.Font.GothamBold
autoLaserBtn.TextSize = 16
autoLaserBtn.Text = "Auto Laser OFF"
autoLaserBtn.AutoButtonColor = false
local btnCorner = Instance.new("UICorner", autoLaserBtn)
btnCorner.CornerRadius = UDim.new(0, 8)

-- ===== Label ‡∏£‡∏≤‡∏¢‡∏ä‡∏∑‡πà‡∏≠ =====
local playerListLabel = Instance.new("TextLabel", mainFrame)
playerListLabel.Size = UDim2.new(1, -20, 0, 20)
playerListLabel.Position = UDim2.new(0, 10, 0, 60)
playerListLabel.BackgroundTransparency = 1
playerListLabel.Text = "‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏ú‡∏π‡πâ‡πÄ‡∏•‡πà‡∏ô‡∏ó‡∏µ‡πà‡∏´‡πâ‡∏≤‡∏°‡∏¢‡∏¥‡∏á:"
playerListLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
playerListLabel.Font = Enum.Font.Gotham
playerListLabel.TextSize = 14
playerListLabel.TextXAlignment = Enum.TextXAlignment.Left

-- ===== Scroll ‡∏£‡∏≤‡∏¢‡∏ä‡∏∑‡πà‡∏≠ =====
local playerListFrame = Instance.new("ScrollingFrame", mainFrame)
playerListFrame.Size = UDim2.new(1, -20, 0, 140)
playerListFrame.Position = UDim2.new(0, 10, 0, 85)
playerListFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
playerListFrame.BorderSizePixel = 0
playerListFrame.ScrollBarThickness = 6
local listCorner = Instance.new("UICorner", playerListFrame)
listCorner.CornerRadius = UDim.new(0, 8)

local listLayout = Instance.new("UIListLayout", playerListFrame)
listLayout.Padding = UDim.new(0, 4)
listLayout.SortOrder = Enum.SortOrder.LayoutOrder

-- ===== Drag Support =====
local dragging, dragInput, dragStart, startPos
local function update(input)
    local delta = input.Position - dragStart
    mainFrame.Position = UDim2.new(
        startPos.X.Scale, startPos.X.Offset + delta.X,
        startPos.Y.Scale, startPos.Y.Offset + delta.Y
    )
end
mainFrame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = mainFrame.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then dragging = false end
        end)
    end
end)
mainFrame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then dragInput = input end
end)
UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then update(input) end
end)

-- ===== Rainbow Border =====
task.spawn(function()
    local t = 0
    while screenGui.Parent do
        t = t + RunService.Heartbeat:Wait()
        local r = math.sin(t*2) * 127 + 128
        local g = math.sin(t*2 + 2) * 127 + 128
        local b = math.sin(t*2 + 4) * 127 + 128
        stroke.Color = Color3.fromRGB(r, g, b)
    end
end)

-- ===== Auto Laser Logic =====
local AutoLaser = false
local LaserDistance = 70
local Net = ReplicatedStorage:WaitForChild("Packages"):WaitForChild("Net")
local Remote = Net:WaitForChild("RE/UseItem")

local function getRoot()
    local char = player.Character
    if char then return char:FindFirstChild("HumanoidRootPart") end
end
local function equipLaser()
    local backpack = player:WaitForChild("Backpack")
    local character = player.Character
    local humanoid = character:FindFirstChild("Humanoid")
    local laserTool = backpack:FindFirstChild("Laser Cape") or character:FindFirstChild("Laser Cape")
    if laserTool and humanoid then
        if laserTool.Parent ~= character then
            humanoid:EquipTool(laserTool)
            RunService.RenderStepped:Wait()
        end
        return laserTool
    end
    return nil
end
local function unequipLaser()
    local character = player.Character
    local backpack = player:WaitForChild("Backpack")
    local laserTool = character:FindFirstChild("Laser Cape")
    if laserTool then laserTool.Parent = backpack end
end

-- ‡∏£‡∏≤‡∏¢‡∏ä‡∏∑‡πà‡∏≠‡∏ó‡∏µ‡πà‡∏´‡πâ‡∏≤‡∏°‡∏¢‡∏¥‡∏á
local ignoreList = {}

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏õ‡∏∏‡πà‡∏°‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏ú‡∏π‡πâ‡πÄ‡∏•‡πà‡∏ô
local function createPlayerButtons()
    playerListFrame:ClearAllChildren()
    local listLayout = Instance.new("UIListLayout", playerListFrame)
    listLayout.Padding = UDim.new(0, 4)
    listLayout.SortOrder = Enum.SortOrder.LayoutOrder

    for _, plr in pairs(Players:GetPlayers()) do
        if plr ~= player then
            local btn = Instance.new("TextButton", playerListFrame)
            btn.Size = UDim2.new(1, -10, 0, 25)
            btn.BackgroundColor3 = ignoreList[plr.Name] and Color3.fromRGB(200, 80, 80) or Color3.fromRGB(60, 60, 60)
            btn.TextColor3 = Color3.fromRGB(255, 255, 255)
            btn.Text = " " .. plr.DisplayName
            btn.Font = Enum.Font.Gotham
            btn.TextSize = 14
            btn.AutoButtonColor = false

            local c = Instance.new("UICorner", btn)
            c.CornerRadius = UDim.new(0, 6)

            btn.MouseButton1Click:Connect(function()
                ignoreList[plr.Name] = not ignoreList[plr.Name]
                btn.BackgroundColor3 = ignoreList[plr.Name] and Color3.fromRGB(200, 80, 80) or Color3.fromRGB(60, 60, 60)
            end)
        end
    end
    playerListFrame.CanvasSize = UDim2.new(0, 0, 0, #Players:GetPlayers()*30)
end

-- ===== ‡∏õ‡∏∏‡πà‡∏° Refresh =====
local refreshBtn
local function createRefreshBtn()
    refreshBtn = Instance.new("TextButton", mainFrame)
    refreshBtn.Size = UDim2.new(1, -20, 0, 30)
    refreshBtn.Position = UDim2.new(0, 10, 0, 230)
    refreshBtn.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
    refreshBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
    refreshBtn.Font = Enum.Font.GothamBold
    refreshBtn.TextSize = 14
    refreshBtn.Text = "üîÑ Refresh Players"
    local refreshCorner = Instance.new("UICorner", refreshBtn)
    refreshCorner.CornerRadius = UDim.new(0, 6)

    refreshBtn.MouseButton1Click:Connect(function()
        createPlayerButtons()
    end)
end

-- ===== ‡∏õ‡∏∏‡πà‡∏°‡∏¢‡πà‡∏≠/‡∏Ç‡∏¢‡∏≤‡∏¢ UI =====
local uiMinimized = false
local minimizeBtn = Instance.new("TextButton", mainFrame)
minimizeBtn.Size = UDim2.new(0, 20, 0, 20)
minimizeBtn.Position = UDim2.new(1, -30, 0, 10)
minimizeBtn.Text = "‚Äì"
minimizeBtn.Font = Enum.Font.GothamBold
minimizeBtn.TextSize = 14
minimizeBtn.BackgroundColor3 = Color3.fromRGB(60,60,60)
minimizeBtn.TextColor3 = Color3.fromRGB(255,255,255)
local minCorner = Instance.new("UICorner", minimizeBtn)
minCorner.CornerRadius = UDim.new(0,4)

minimizeBtn.MouseButton1Click:Connect(function()
    uiMinimized = not uiMinimized
    if uiMinimized then
        mainFrame.Size = UDim2.new(0, 200, 0, 60)
        playerListFrame.Visible = false
        playerListLabel.Visible = false
        if refreshBtn then refreshBtn:Destroy() end
        minimizeBtn.Text = "+"
    else
        mainFrame.Size = UDim2.new(0, 200, 0, 260)
        playerListFrame.Visible = true
        playerListLabel.Visible = true
        createRefreshBtn()
        minimizeBtn.Text = "‚Äì"
    end
end)

-- ===== ‡∏õ‡∏∏‡πà‡∏° Auto Laser =====
autoLaserBtn.MouseButton1Click:Connect(function()
    AutoLaser = not AutoLaser
    autoLaserBtn.Text = "Auto Laser " .. (AutoLaser and "ON" or "OFF")
    autoLaserBtn.BackgroundColor3 = AutoLaser and Color3.fromRGB(50,200,100) or Color3.fromRGB(50,50,50)
    if not AutoLaser then unequipLaser() end
end)

-- ‡∏õ‡∏¥‡∏î Auto Laser ‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥‡∏ñ‡πâ‡∏≤ UI ‡∏ñ‡∏π‡∏Å‡∏•‡∏ö
screenGui.AncestryChanged:Connect(function(_, parent)
    if not parent and AutoLaser then
        AutoLaser = false
        autoLaserBtn.Text = "Auto Laser OFF"
        autoLaserBtn.BackgroundColor3 = Color3.fromRGB(50,50,50)
        unequipLaser()
    end
end)

-- ===== Main Auto Laser loop =====
local currentTarget = nil
spawn(function()
    while true do
        if AutoLaser then
            local root = getRoot()
            if root then
                local myPos = root.Position
                local laserTool = equipLaser()
                if laserTool then
                    local closestTarget = nil
                    local closestDist = math.huge

                    for _, targetPlayer in pairs(Players:GetPlayers()) do
                        if targetPlayer ~= player 
                        and not ignoreList[targetPlayer.Name]
                        and targetPlayer.Character
                        and targetPlayer.Character:FindFirstChild("UpperTorso") then
                            local targetPart = targetPlayer.Character.UpperTorso
                            local dist = (myPos - targetPart.Position).Magnitude
                            if dist <= LaserDistance and dist < closestDist then
                                closestDist = dist
                                closestTarget = targetPlayer
                            end
                        end
                    end

                    currentTarget = closestTarget
                    if currentTarget and currentTarget.Character and currentTarget.Character:FindFirstChild("UpperTorso") then
                        local targetPart = currentTarget.Character.UpperTorso
                        laserTool:Activate()
                        Remote:FireServer(targetPart.Position, targetPart)
                    end
                end
            end
        end
        task.wait(0.01)
    end
end)

-- ‡πÇ‡∏´‡∏•‡∏î‡∏Ñ‡∏£‡∏±‡πâ‡∏á‡πÅ‡∏£‡∏Å
createPlayerButtons()
createRefreshBtn()
